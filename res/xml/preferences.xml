<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Settings" >
		<SwitchPreference
		    android:summary="Run the ISATAP client"
		    android:title="Enable ISATAP"
		    android:key="enabled"
		    android:defaultValue="false" />

	    <EditTextPreference
	        android:summary="List of potential routers"
	        android:title="ISATAP routers"
	        android:key="routers" 
	        android:defaultValue="" />
		
	    <PreferenceScreen 
	        android:title="Advanced" 
	        android:summary="Advanced settings">
	        
		    <EditTextPreference
		        android:summary="Name of the ISATAP interface"
		        android:title="Interface name"
		        android:key="interface" 
		        android:defaultValue="is0" />

		    <EditTextPreference
		        android:title="Maximum transfer unit (MTU)"
		        android:key="mtu" 
		        android:defaultValue="1280" />

		    <EditTextPreference
		        android:title="Time to live (TTL)"
		        android:key="ttl" 
		        android:defaultValue="64" />

		    <CheckBoxPreference
		        android:summary="IPv4 Path MTU Discovery"
		        android:title="MTU Discovery"
		        android:key="pmtudisc" 
		        android:defaultValue="true" />

		    <EditTextPreference
		        android:title="Router solicitation interval"
		        android:key="rsinterval" 
		        android:defaultValue="0" />

		    <EditTextPreference
		        android:title="DNS interval"
		        android:key="checkdns" 
		        android:defaultValue="3600" />		    	        
	    </PreferenceScreen>
	</PreferenceCategory>
	
    <PreferenceCategory
        android:title="Status"
        android:key="status_title" >
	    
        <PreferenceScreen
            android:title="@string/status"
            android:summary="@string/interface_not_found"
            android:key="status_pref" >
		    
	        <PreferenceScreen
	            android:title="@string/status_interface"
	            android:key="status_interface"
	            android:enabled="false" />
	        
	        <PreferenceScreen
	            android:title="Link-local address"
	            android:key="status_ll"
	            android:enabled="false" />
	        	        
	        <PreferenceScreen
	            android:title="Global address"
	            android:key="status_global"
	            android:enabled="false" />
	        	        
            <PreferenceScreen
	            android:title="MTU"
	            android:key="status_mtu"
	            android:enabled="false" />

        </PreferenceScreen>

    </PreferenceCategory>
</PreferenceScreen>